<Application
    x:Class="IntelOrca.WITC.Metro.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IntelOrca.WITC.Metro">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="DefaultStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <x:String x:Key="AppName">Who's in the Computer?</x:String>
            <x:String x:Key="AppVersion">Metro 0.1</x:String>
            <x:String x:Key="AppCopyright">Copyright Ted John 2013</x:String>
            <x:String x:Key="AppWebsite">http://intelorca.co.uk</x:String>
        </ResourceDictionary>
    </Application.Resources>
</Application>
